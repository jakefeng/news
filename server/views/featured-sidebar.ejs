<% if( scrollNews ){ %>
<div class="widget ">
    <div class="heading"><h4>Top News</h4></div>
    <div class="content">
        <% for(var i=0; i<scrollNews.length && i < 5; i++){ %>
            <div class="wrap-vid">
                <div class="zoom-container">
                    <div class="zoom-caption">
                        <span class="vimeo">Hot</span>
                        <a href="/news/<%= scrollNews[i].title %>">
                            <i class="fa fa-play-circle-o fa-5x" style="color: #fff"></i>
                        </a>
                        <!--<p>Video's Name</p>-->
                    </div>
                    <img src="<%= scrollNews[i].imgurls[0] %>" />
                </div>
                <h3 class="vid-name"><a href="/news/<%= scrollNews[i].title %>"><%= scrollNews[i].title %></a></h3>
                <div class="info">
                    <span><i class="fa fa-calendar"></i><%= scrollNews[i].time %></span>
                    <span><i class="fa fa-heart"></i><%= scrollNews[i].comments_count %></span>
                </div>
            </div>
        <% } %>
    </div>
</div>
<% } %>