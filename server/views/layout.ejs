
<!--Top-->
<nav id="top">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <% if( genre ){ %>
                    <strong><%= genres[genre] %></strong>
                <% } %>

            </div>
            <div class="col-md-6">
                <ul class="list-inline top-link link">
                    <li><a href="/"><i class="fa fa-home"></i> 主页</a></li>
