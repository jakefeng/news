                    <% if( user ) { %>
                        <li><a href="/users/info"><i class="fa fa-user"></i> <%= user.email %></a></li>
                        <li><a href="/users/logout"><i class="fa fa-comments"></i> 登出</a></li>
                    <% }else { %>
                        <li><a href="/login"><i class="fa fa-comments"></i> 登录</a></li>
                    <% } %>
                    <li><a href="#"><i class="fa fa-question-circle"></i> 联系我们</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>

